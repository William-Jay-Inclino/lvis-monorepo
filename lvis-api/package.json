    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "device-detector-js": "^3.0.3",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
